<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:background="@color/colorBiru"
                android:scaleType="center" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinslight"
                android:text="Good Morning"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_title"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Saldo Anda"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppinslight"
                                        android:paddingRight="3dp"
                                        android:text="Rp"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppinslight"
                                        android:gravity="right"
                                        android:text="0"
                                        android:id="@+id/saldo"
                                        android:textColor="@android:color/black"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@color/colorGrey" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="@android:color/white"
                                android:orientation="horizontal"
                                android:weightSum="6">

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:id="@+id/relTopup"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:id="@+id/logo_topup"
                                        android:padding="4dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/money" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_topup"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Topup Saldo"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/colorGrey" />

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:id="@+id/relRiwayatTopup"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:id="@+id/logo_list"
                                        android:padding="4dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/checklist" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_list"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Riwayat Topup"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/colorGrey" />

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:id="@+id/relRiwayatPoint"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:padding="4dp"
                                        android:id="@+id/logo_tropy"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/tropy" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_tropy"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Riwayat Pemesanan"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />
                                </RelativeLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinslight"
                                android:text="Isi Ulang"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinslight"
                                android:text="Harga murah , keuntungan melimpah !"
                                android:textSize="11sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                android:background="@android:color/white"
                                android:orientation="horizontal"
                                android:weightSum="6">

                                <RelativeLayout
                                    android:id="@+id/relPulsa"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:id="@+id/logo_pulsa"
                                        android:padding="4dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/pulsa" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_pulsa"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Pulsa"
                                        android:layout_marginTop="9dp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/colorGrey" />

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:id="@+id/relPaket"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:id="@+id/logo_paket"
                                        android:padding="4dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/cloud" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_paket"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Paket Data"
                                        android:layout_marginTop="9dp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/colorGrey" />

                                <RelativeLayout
                                    android:id="@+id/relListrik"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2">

                                    <ImageView
                                        android:padding="4dp"
                                        android:id="@+id/logo_flash"
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/flash" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/logo_flash"
                                        android:fontFamily="@font/poppinslight"
                                        android:text="Token Listrik"
                                        android:layout_marginTop="9dp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="11sp" />
                                </RelativeLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="372dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/poppinslight"
                                android:text="Transaksi Terakhir"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/text_rincian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/poppinslight"
                                android:paddingRight="35dp"
                                android:text="Lihat Semua"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                        </RelativeLayout>
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/list_transaksi"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>